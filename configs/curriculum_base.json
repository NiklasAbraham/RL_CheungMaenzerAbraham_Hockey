{
    "curriculum": {
      "phases": [
        {
          "name": "shooting_basics",
          "episodes": 10000,
          "environment": {
            "mode": "TRAIN_SHOOTING",
            "keep_mode": true
          },
          "opponent": {
            "type": "none",
            "weight": 1.0
          },
          "reward_shaping": null
        }
      ]
    },
    "hyperparameters": {
      "learning_rate": 0.0001,
      "batch_size": 256
    },
    "training": {
      "max_episode_steps": 500,
      "updates_per_step": 1,
      "warmup_steps": 200,
      "reward_scale": 0.5,
      "checkpoint_save_freq": 100
    },
    "agent": {
      "type": "DDDQN",
      "hyperparameters": {
        "hidden_dim": [256, 256, 256],
        "target_update_freq": 2000,
        "eps": 1,
        "eps_min": 0.05,
        "eps_decay": 0.9995,
        "use_huber_loss": true
      }
    }
  }
  