{
  "curriculum": {
    "phases": [
      {
        "name": "shooting_basics",
        "episodes": 2000,
        "environment": {"mode": "TRAIN_SHOOTING", "keep_mode": true},
        "opponent": {"type": "none", "weight": 1.0},
        "reward_shaping": null
      },
      {
        "name": "defense_basics",
        "episodes": 2000,
        "environment": {"mode": "TRAIN_DEFENSE", "keep_mode": true},
        "opponent": {"type": "basic_weak", "weight": 1.0},
        "reward_shaping": null
      },
      {
        "name": "integration_phase",
        "episodes": 3000,
        "environment": {"mode": "NORMAL", "keep_mode": true},
        "opponent": {
          "type": "weighted_mixture",
          "opponents": [
            {"type": "basic_weak", "weight": 0.55},
            {"type": "basic_strong", "weight": 0.45}
          ]
        },
        "reward_shaping": null
      },
      {
        "name": "full_competency",
        "episodes": 10000,
        "environment": {"mode": "NORMAL", "keep_mode": true},
        "opponent": {"type": "basic_strong", "weight": 1.0},
        "reward_shaping": null
      }
    ]
  },
  "hyperparameters": {
    "learning_rate": 0.0003,
    "batch_size": 256
  },
  "training": {
    "max_episode_steps": 500,
    "updates_per_step": 1,
    "warmup_steps": 5000,
    "reward_scale": 0.5,
    "checkpoint_save_freq": 5000
  },
  "agent": {
    "type": "TDMPC2",
    "hyperparameters": {
      "latent_dim": 256,
      "hidden_dim": [128, 256, 128],
      "num_q": 3,
      "gamma": 0.99,
      "horizon": 5,
      "num_samples": 128,
      "num_iterations": 4,
      "temperature": 0.5
    }
  }
}
