{
  "curriculum": {
    "phases": [
      {
        "name": "integration_phase",
        "episodes": 3000,
        "environment": {"mode": "NORMAL", "keep_mode": true},
        "opponent": {
          "type": "weighted_mixture",
          "opponents": [
            {"type": "basic_weak", "weight": 0.55},
            {"type": "basic_strong", "weight": 0.45}
          ]
        },
        "reward_shaping": {
          "N": 500,
          "K": 1000,
          "CLOSENESS_START": 0.5,
          "TOUCH_START": 0.5,
          "CLOSENESS_FINAL": 0.1,
          "TOUCH_FINAL": 0.2, 
          "DIRECTION_FINAL": 0.7
        }
      },
      {
        "name": "full_competency",
        "episodes": 10000,
        "environment": {"mode": "NORMAL", "keep_mode": true},
        "opponent": {"type": "basic_strong", "weight": 1.0},
        "reward_shaping": {
          "N": 500,
          "K": 1000,
          "CLOSENESS_START": 0.5,
          "TOUCH_START": 0.5,
          "CLOSENESS_FINAL": 0.1,
          "TOUCH_FINAL": 0.2,
          "DIRECTION_FINAL": 0.7
        }
      }
    ]
  },
  "hyperparameters": {
    "learning_rate": 0.0003,
    "batch_size": 512
  },
  "training": {
    "max_episode_steps": 500,
    "updates_per_step": 1,
    "warmup_steps": 5000,
    "reward_scale": 0.5,
    "checkpoint_save_freq": 20
  },
  "agent": {
    "type": "TDMPC2",
    "hyperparameters": {
      "latent_dim": 512,
      "hidden_dim": [512, 512, 512],
      "num_q": 5,
      "gamma": 0.99,
      "horizon": 3,
      "num_samples": 512,
      "num_iterations": 6,
      "temperature": 0.5
    }
  }
}
