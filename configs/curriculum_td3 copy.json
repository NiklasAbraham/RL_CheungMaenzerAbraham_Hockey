{
    "curriculum": {
      "phases": [
        {
          "name": "shooting_basics",
          "episodes": 6000,
          "environment": {
            "mode": "TRAIN_SHOOTING",
            "keep_mode": true
          },
          "opponent": {
            "type": "none",
            "weight": 1.0
          },
          "reward_shaping": null
        },
        {
          "name": "defense_basics",
          "episodes": 5000,
          "environment": {
            "mode": "TRAIN_DEFENSE",
            "keep_mode": true
          },
          "opponent": {
            "type": "basic_weak",
            "weight": 1.0
          },
          "reward_shaping": null
        },
        {
          "name": "normal_game",
          "episodes": 5000,
          "environment": {
            "mode": "NORMAL",
            "keep_mode": true
          },
          "opponent": {
            "type": "basic_weak",
            "weight": 1.0
          },
          "reward_shaping": null
        }
      ]
    },
    "hyperparameters": {
      "learning_rate": 0.00001,
      "batch_size": 256
    },
    "training": {
      "max_episode_steps": 500,
      "updates_per_step": 1,
      "warmup_steps": 1024,
      "reward_scale": 0.5,
      "checkpoint_save_freq": 500
    },
    "agent": {
      "type": "TD3",
      "hyperparameters": {
        "critic_lr": 1e-5,
        "actor_lr": 1e-5,
        "critic_dim": 256,
        "actor_dim": 256,
        "actor_n_layers": 2,
        "critic_n_layers": 3,
        "batch_size": 256,
        "discount": 0.9999,
        "policy_update_delay": 2,
        "tau": 0.005,
        "noise_type": "normal",
        "exploration_noise": 0.1,
        "policy_noise": 0.2,
        "noise_clip": 0.5,
        "target_network_update_steps": 10
      }
    }
  }
  