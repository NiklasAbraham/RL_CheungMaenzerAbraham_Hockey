{
  "curriculum": {
    "phases": [
      {
        "name": "easy",
        "episodes": 200,
        "environment": {"mode": "NORMAL", "keep_mode": true},
        "opponent": {
          "type": "weighted_mixture",
          "opponents": [
            {"type": "basic_weak", "weight": 0.80},
            {"type": "basic_strong", "weight": 0.20}
          ]
        },
        "reward_shaping": null,
        "clear_buffer": false
      },
      {
        "name": "hard",
        "episodes": 200,
        "environment": {"mode": "NORMAL", "keep_mode": true},
        "opponent": {
          "type": "weighted_mixture",
          "opponents": [
            {"type": "basic_weak", "weight": 0.10},
            {"type": "basic_strong", "weight": 0.90}
          ]
        },
        "reward_shaping": null,
        "clear_buffer": false
      },
      {
        "name": "archive",
        "episodes": 200,
        "environment": {"mode": "NORMAL", "keep_mode": true},
        "opponent": {
          "type": "archive",
          "distribution": {
            "skill": 0.8,
            "random": 0.1,
            "baseline": 0.1
          },
          "skill_range": 50.0
        },
        "reward_shaping": null,
        "clear_buffer": false
      }
    ]
  },
  "hyperparameters": {
    "learning_rate": 0.001,
    "batch_size": 256
  },
  "training": {
    "max_episode_steps": 500,
    "updates_per_step": 1,
    "warmup_steps": 80000,
    "reward_scale": 0.5,
    "checkpoint_save_freq": 5000
  },
  "agent": {
    "type": "SAC",
    "hyperparameters": {
      "discount": 0.99,
      "tau": 0.005,
      "alpha": 0.2,
      "learn_alpha": true,
      "noise": "pink",
      "max_episode_steps": 500
    }
  }
}
