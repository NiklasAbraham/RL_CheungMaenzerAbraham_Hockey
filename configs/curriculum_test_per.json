{
  "curriculum": {
    "phases": [
      {
        "name": "test_phase",
        "episodes": 100,
        "environment": {"mode": "TRAIN_SHOOTING", "keep_mode": true},
        "opponent": {"type": "none", "weight": 1.0},
        "reward_shaping": null
      }
    ]
  },
  "hyperparameters": {
    "learning_rate": 0.0005,
    "batch_size": 256
  },
  "training": {
    "max_episode_steps": 500,
    "updates_per_step": 1,
    "warmup_steps": 1000,
    "reward_scale": 0.5,
    "checkpoint_save_freq": 1000
  },
  "agent": {
    "type": "DDQN_PER",
    "hyperparameters": {
      "hidden_dim": [256, 256],
      "target_update_freq": 50,
      "eps": 1,
      "eps_min": 0.1,
      "eps_decay": 0.9995,
      "use_per": true,
      "per_alpha": 0.6,
      "per_beta": 0.4
    }
  }
}
